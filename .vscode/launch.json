    "version": "0.2.0",
    "configurations": [
        {
            "name": "Test Linked List",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
            "runtimeArgs": [
                "exec",
                "--scope",
                "@cwgruss/linked-list",
                "--",
                "node"
            ],
            "args": [
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--verbose",
                "--runInBand",
                "--no-cache",
                "packages/linked-list"
            ]
        }
    ]
}